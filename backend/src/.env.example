# ===================
# Redis Configuration
# ===================
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASS=your_secure_redis_password_here

# ===================
# PostgreSQL Configuration
# ===================
POSTGRES_USER=first
POSTGRES_PASSWORD=your_secure_postgres_password_here
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DB=first_db

# ===================
# Authentication
# ===================
SECRET_KEY=your_super_secret_key_here_generate_with_secrets_token_hex_32
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# ===================
# Telegram Bot
# ===================
# Create bot via @BotFather: https://t.me/botfather
TELEGRAM_TOKEN=your_telegram_bot_token_here
TELEGRAM_BOT_USERNAME=your_bot_username_without_at_symbol

# ===================
# Discord Alerts (Optional)
# ===================
# Leave empty to disable critical error alerts to Discord
ALERT_WEBHOOK=

# ===================
# Cloudflare Turnstile (Optional)
# ===================
# Get from: https://dash.cloudflare.com/turnstile
TURNSTILE_SECRET_KEY=
